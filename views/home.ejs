<div class="slideshow-container">

    <div class="mySlides fade">
      <div class="numbertext">1 / 3</div>
      <img src="https://fakeimg.pl/970x250" style="width:100%">
      <div class="text">Caption Text</div>
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">2 / 3</div>
      <img src="https://fakeimg.pl/970x250" style="width:100%">
      <div class="text">Caption Two</div>
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">3 / 3</div>
      <img src="https://fakeimg.pl/970x250" style="width:100%">
      <div class="text">Caption Three</div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>
  
  <div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>

  <a href="">My List</a>
  <a href="/manga/all">View All Mangas</a>

  <form action="/manga/search">
    <input type="text" name="search">
    <button>Search</button>
  </form>

<section class="random-mangas">
  <% for (let manga of mangas) { %>
    <div class="top-manga ui-card">
      <section id="top">
        <div class="image-wrapper">
          <img src="<%= manga.image_url %>" alt="">
        </div>
      </section>
      <section class="content" id="bottom">
        <h3><a href="/manga/<%= manga.id %>"><%= manga.title %></a><h3>
        <h3>"Author Name"</h3>
      </section>
    </div>
  <% } %>
</section>